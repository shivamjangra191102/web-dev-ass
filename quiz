const quizQuestions = [
    { question: "What is the capital of France?", answer: "paris" },
    { question: "What does HTML stand for?", answer: "hypertext markup language" },
    { question: "What is 5 + 7?", answer: "12" },
    { question: "Which planet is known as the Red Planet?", answer: "mars" },
    { question: "What is the largest ocean on Earth?", answer: "pacific" }
];

function runQuiz() {
    let score = 0;

    alert("Welcome to the Quiz Game! Answer the questions to test your knowledge.");

    for (let i = 0; i < quizQuestions.length; i++) {
        let userAnswer = prompt(quizQuestions[i].question);

        // if cancel is pressed
        if (userAnswer === null) {
            alert("Quiz ended early.");
            return;
        }

        userAnswer = userAnswer.toLowerCase().trim();

        if (userAnswer === quizQuestions[i].answer) {
            alert("Correct! ðŸŽ‰");
            score++;
        } else {
            alert(`Wrong! âŒ The correct answer is: ${quizQuestions[i].answer}`);
        }
    }

    alert(`Quiz Completed!\nYour Score: ${score} / ${quizQuestions.length}`);
}

// Run the quiz
runQuiz();
